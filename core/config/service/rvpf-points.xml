<?xml-stylesheet type='text/xsl' href='rvpf.xsl'?>

<metadata lang='en' title="Point definitions">

    <!-- Clock points. -->

    <Point uuid='1f9bf6cf-e440-4d24-9519-57b3cc50daf4' name='HourClock'
            title="Hour Clock"
            store='Store' content='Clock' sync='Hour'
            origin='Clock'>
        <description>
            Generated by the Clock service at the top of each hour.
        </description>
    </Point>

    <Point uuid='e0671179-8623-48f5-9848-813854a37d2b' name='MidnightClock'
            title="Day Clock"
            store='Store' content='Clock' sync='Midnight'
            origin='Clock'>
        <description>
            Generated by the Clock service at midnight each day.
        </description>
    </Point>

    <Point uuid='8fa56889-8686-4502-bf39-21ccad5673f1' name='QuarterClock'
            title="Quarter Clock"
            store='Store' content='Clock' sync='Quarter'
            origin='Clock'>
        <description>
            Generated by the Clock service every fifteen minutes.
        </description>
    </Point>

    <!-- Store points. -->

    <Point uuid='0fb66b75-b148-4fca-8a25-7fb47752f714' name='Eth0Bytes'
            title="Bytes on eth0"
            store='Store' content='Count' sync='Minute'
            processor='Resynchronizer' transform='ClearSeconds'>
        <description>
            Count of bytes received and transmitted on eth0.
        </description>
        <notes>Generated by a Jython script on Linux.</notes>
        <param name='Resynchronized'/>
        <input point='.'/>
    </Point>

    <!-- Processor points. -->

    <Point uuid='4162c739-12ac-44b5-99c1-3b5cd3ff7096'
            name='DayTicks'
            store='Store' content='Count' sync='Midnight'
            processor='Processor' transform='Count'>
        <input point='MidnightClock'/>
        <input point='HourClock'/>
    </Point>

    <Point uuid='29a3deb6-befd-4e86-9088-31e93e1bbd6e'
            name='HourTicks'
            store='Store' content='Count' sync='Hour'
            processor='Processor' transform='Count'>
        <input point='HourClock'/>
        <input point='QuarterClock'/>
    </Point>

    <Point uuid='c517e735-f05a-4163-b39d-174adaa054c2'
            name='Eth0BytesHour'
            title="Bytes on eth0 for an hour"
            store='Store' content='Count' sync='Hour'
            processor='Processor' transform='Difference'>
        <input point='HourClock'/>
        <input point='Eth0Bytes'/>
    </Point>

    <Point uuid='ffb4a0d3-509b-437d-993a-e9e80e3719b5'
            name='Eth0MebibytesHour'
            title="Mebibytes on eth0 for an hour"
            store='Store' content='Count'
            processor='Processor' transform='Mebi'>
        <input point='Eth0BytesHour'/>
    </Point>

    <Point uuid='735cf3f0-98c7-4d97-94a8-839c55ea8013'
            name='SampleInputPoint1'
            title="Sample input point 1"
            store='Store' content='Text'
            origin='Unspecified'/>

    <Point uuid='a642b941-6414-4f19-8719-49f893a245b4'
            name='SampleInputPoint2'
            title="Sample input point 2"
            store='Store' content='Text'
            origin='Unspecified'/>

    <Point uuid='a2e5dfda-0061-4ae4-bbdd-1149c9c24271'
            name='SampleResultPoint1'
            title="Sample result point 1"
            store='Store' content='Text'
            processor='Processor' transform='Copy'
            origin='Unspecified'>
        <input point='SampleInputPoint1'/>
    </Point>

    <Point uuid='2f442b78-55ee-4e35-8a1e-69e6ab2d2aa2'
            name='SampleResultPoint2'
            title="Sample result point 2"
            store='Store' content='Text'
            processor='Processor' transform='Copy'
            origin='Unspecified'>
        <input point='SampleInputPoint2'/>
    </Point>

</metadata>

