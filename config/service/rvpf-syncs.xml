<?xml-stylesheet type='text/xsl' href='rvpf.xsl'?>

<metadata lang='en' title="Sync definitions">

    <Sync name='Hour' title="Each hour"
            classDef='CrontabSync'>
        <param name='Crontab' value='0 * * * *'/>
    </Sync>

    <Sync name='Midnight' title="Each day at midnight"
            classDef='CrontabSync'>
        <param name='Crontab' value='0 0 * * *'/>
    </Sync>

    <Sync name='Quarter' title="Each quarter"
            classDef='CrontabSync'>
        <param name='Crontab' value='*/15 * * * *'/>
    </Sync>

    <Sync name='Minute' title="Each minute"
            classDef='CrontabSync'>
        <param name='Crontab' value='* * * * *'/>
    </Sync>

</metadata>

